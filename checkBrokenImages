public static boolean checkNoBrokenImagesWebSite(RemoteWebDriver driver, String WebPage)
	{
		int invalidImageCount = 0;
		boolean flag = true;
		try
		{
			List<WebElement> imagesList = Element.findWebElements(driver, Element.TAGNAME, "img");
			for(WebElement image:imagesList)
			{
				if(image!=null)
				{
					HttpClient client = HttpClientBuilder.create().build();
					HttpGet request = new HttpGet(image.getAttribute("src"));
					HttpResponse response = client.execute(request);
					
					if(response.getStatusLine().getStatusCode() != 200)
					{
						invalidImageCount++;
						flag = false;
						break;
					}
				}
			}
			System.out.println("Number of Invalid Image Count on "+WebPage+"  "+"is = "+ invalidImageCount);
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
		
		return flag;
	}
